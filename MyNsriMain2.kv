#: import SlideTransition kivy.uix.screenmanager.SlideTransition

<Display>:
	canvas.before:
		Color:
			rgba:0,0,0.2,1
		Rectangle:
			pos: self.pos
			size: self.size
	BoxLayout:
		orientation: "vertical"
		GridLayout:
			rows:1
			cols:4
			size_hint_y:0.15
			Button3:
				text:"3 body problem"
				bold:True
				color:1,1,1,1
				on_release:
					sm.transition = SlideTransition(direction='right')
					#sm.transition = NoTransition()
					sm.current = 'screen_one'
			Button4:
				text: 'spheroidal rotating system'
				bold:True
				color:1,1,1,1
				on_release:
					sm.transition = SlideTransition(direction='left')
					#sm.transition = NoTransition()
					sm.current = 'screen_two'
			Button3:
				text: 'study support'
				bold:True
				color:1,1,1,1
				on_release:
					sm.transition = SlideTransition(direction='left')
					#sm.transition = NoTransition()
					sm.current = 'screen_three'
			Button4:
				text: 'news'
				bold:True
				color:1,1,1,1
				on_release:
					sm.transition = SlideTransition(direction='left')
					#sm.transition = NoTransition()
					sm.current = 'screen_four'

		ScreenManager:
			id: sm
			size_hint_y:0.85
			NbpWidget:
			SrsWidget:
			SsWidget:
			NewsWidget:

<NbpWidget>:
	name:'screen_one'
	canvas.before:
		Color:
			rgba:0,0,0.2,1
		Rectangle:
			pos: self.pos
			size: self.size

	GridLayout:
		rows:3
		cols:1
		size:root.width,root.height

		GridLayout:
			rows:2
			cols:1
			size_hint_y:0.2

			Label:
				font_size:20
				text:"[color=ffffff]Please input 3 body initial position and velocity of xy coordinate.\nAll absolute values less than or equal to 2.[/color]"
